@model RestaurantsPlatform.Web.ViewModels.Restaurants.EditRestaurantViewModel

@{
    ViewData["Title"] = Model.RestaurantName;
}

<h1 class="text-center">@Model.RestaurantName</h1>

<hr />
<div class="mx-auto row">
    <div class="col-md-4">
